html {
  box-sizing: border-box;
}
*, *:before, *:after {
  box-sizing: inherit;
}

body, .ad-main, .ad-content, .card, .records-table, .btn, .btn-primary, .btn-outline {
  max-width: 100vw;
  overflow-x: hidden;
}

@media (max-width: 1024px) {
  html {
    font-size: 100%;
  }
}

@media (max-width: 768px) {
  html {
    font-size: 100%;
  }
}
/* =======================
   TABLET (768px–1023px)
   ======================= */
@media (max-width: 1024px) {
.ad-main {
flex-direction: column;
align-items: stretch;
padding: 8px 0;
}
.ad-sidebar {
max-width: 140px;
min-width: 80px;
margin: 0 0 10px 0;
padding: 6px 0;
border-radius: 8px;
}
.ad-content {
padding: 8px 2px;
border-radius: 8px;
width: 100%;
max-width: 100%;
box-sizing: border-box;
}
.card {
padding: 8px 2px;
border-radius: 6px;
margin-bottom: 10px;
width: 100%;
max-width: 100%;
box-sizing: border-box;
margin-left: 0;
margin-right: 0;
}
.records-table th, .records-table td {
padding: 7px 3px;
font-size: 0.97rem;
word-break: break-word;
}
.btn, .btn-primary, .btn-outline {
padding: 10px 12px;
font-size: 1rem;
min-width: 44px;
min-height: 44px;
width: 100%;
box-sizing: border-box;
}
}
/* ================
   MOBILE ≤767px
   ================ */
@media (max-width: 768px) {
.ad-main {
padding: 0;
flex-direction: column;
align-items: stretch;
}
.ad-sidebar {
display: none;
}
.ad-content {
padding: 0;
border-radius: 0;
min-width: 0;
width: 100vw;
max-width: 100vw;
box-sizing: border-box;
}
.card {
padding: 6px 0;
border-radius: 0;
margin-bottom: 8px;
width: 100vw;
max-width: 100vw;
margin-left: 0;
margin-right: 0;
box-sizing: border-box;
}
.records-table {
display: block;
width: 100vw;
max-width: 100vw;
overflow-x: auto;
-webkit-overflow-scrolling: touch;
box-sizing: border-box;
}
.records-table th, .records-table td {
padding: 6px 2px;
font-size: 0.95rem;
white-space: nowrap;
word-break: break-word;
}
.btn, .btn-primary, .btn-outline {
padding: 14px 0;
font-size: 1.08rem;
width: 100%;
min-width: 44px;
min-height: 44px;
box-sizing: border-box;
margin: 0;
}
}
