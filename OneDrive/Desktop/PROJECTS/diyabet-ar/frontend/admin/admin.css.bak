.ad-main {
  display: flex;
  justify-content: center;
  padding: 32px 0;
  background: #f7fafd;
}

.ad-content {
  max-width: 1200px;
  width: 100%;
  margin: 0 auto;
  padding: 32px 24px;
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 2px 16px rgba(0,0,0,0.06);
}

.ad-sidebar {
  min-width: 220px;
  max-width: 260px;
  background: #f3f6fa;
  border-radius: 16px;
  margin-right: 32px;
  padding: 32px 0 24px 0;
  box-shadow: 0 2px 8px rgba(0,0,0,0.03);
}

.ad-nav ul {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.ad-nav li {
  padding: 12px 24px;
  border-radius: 8px;
  font-size: 1.08rem;
  transition: background 0.2s;
}

.ad-nav li.active,
.ad-nav li:hover {
  background: #e6f0fa;
  color: #2563eb;
  font-weight: 600;
}

.btn, .btn-primary, .btn-outline {
  border-radius: 8px;
  padding: 10px 24px;
  font-size: 1rem;
  font-weight: 500;
  transition: background 0.2s, color 0.2s;
}

.btn-primary {
  background: #2563eb;
  color: #fff;
  border: none;
}

.btn-outline {
  background: #fff;
  color: #2563eb;
  border: 1.5px solid #2563eb;
}

.btn:active, .btn-primary:active, .btn-outline:active {
  opacity: 0.85;
}

.card {
  border-radius: 16px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.05);
  background: #fff;
  margin-bottom: 32px;
  padding: 28px 24px;
}

.records-table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 0;
  background: #fff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 1px 8px rgba(0,0,0,0.04);
}

.records-table th, .records-table td {
  padding: 14px 10px;
  text-align: center;
  font-size: 1rem;
}

.records-table th {
  background: #f3f6fa;
  font-weight: 600;
  color: #222;
}

.records-table tr {
  border-bottom: 1px solid #f0f0f0;
}

.records-table tr:last-child {
  border-bottom: none;
}

@media (max-width: 1024px) {
  .ad-main {
    flex-direction: column;
    padding: 16px 0;
  }
  .ad-sidebar {
    max-width: 100%;
    margin: 0 0 24px 0;
